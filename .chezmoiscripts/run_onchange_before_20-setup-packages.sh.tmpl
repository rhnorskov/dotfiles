#!/usr/bin/env bash

set -euo pipefail

# Add Homebrew to PATH (required since each script runs in new shell)
eval "$(/opt/homebrew/bin/brew shellenv)"

# Verify Homebrew is now available
if ! command -v brew &> /dev/null; then
  echo "‚ùå Homebrew not found in PATH even after shellenv"
  echo ""
  echo "Action needed:"
  echo "  Check that Homebrew is installed at /opt/homebrew"
  exit 1
fi

