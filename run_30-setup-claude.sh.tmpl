#!/usr/bin/env bash

# Setup Claude Code

# Check if claude is available
if ! command -v claude &> /dev/null; then
  echo "⏭️  Claude Code not found - skipping setup"
  exit 0
fi

# Add Context7 MCP server at user scope
claude mcp add --scope user --transport http context7 https://mcp.context7.com/mcp \
  --header "CONTEXT7_API_KEY: {{ onepasswordRead "op://Personal/Context7/claude code" }}" 2>&1 | grep -q "already exists" || true

